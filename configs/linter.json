{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "all": true
      },
      "complexity": {
        "all": true
      },
      "correctness": {
        "all": true,
        "useImportExtensions": "off"
      },
      "performance": {
        "all": true
      },
      "style": {
        "all": true,
        "useNamingConvention": "off",
        "noDefaultExport": "off"
      },
      "security": {
        "all": true
      }
    }
  }
}
